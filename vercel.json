{
  "version": 2,
  "builds": [
    {
      "src": "vercel.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/.*", "dest": "package.json" }
  ],
  "env": {
    "DB_FILE": "db.json"
  },
  "functions": {
    "api": { "handler": "index.handler" }
  }
}